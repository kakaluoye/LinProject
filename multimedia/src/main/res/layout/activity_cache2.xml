<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lin.image.cache3.CacheActivity">


    <Button
        android:id="@+id/cacheactivity_three_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载图片并缓存" />

    <Button
        android:id="@+id/cacheactivity_three_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示缓存" />

    <ImageView
        android:id="@+id/cacheactivity_three_iv1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher" />
    <ImageView
        android:id="@+id/cacheactivity_three_iv2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher" />
</LinearLayout>
